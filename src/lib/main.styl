//parallax
.parallaxParent
  height 120vh
  overflow hidden
  text-align center
  @media (max-device-width: 1024px)
    height 100vh
  for i in (0..1)
    & > div:nth-child({i+1})
      position relative
      height 150%
      top -50% - (i*130%)
.bg
  &_head
    background: url("../lib/assets/paris.jpg") no-repeat 30% 40%
    background-size cover
#simulate
  min-height 450px!important
  height auto
  overflow visible!important
  padding-bottom 10%
.header
  opacity 0.5
  & .img
    width 100%
    opacity 0.5
  &_way
    border-radius 5px 5px 0 0
    text-align right
    padding-right 10px
    color #FEFEFE
    background-color rgba(020,20,20,0.8)
.inner
  position relative
  top -250%
  z-index 1
  color #fff
  &_Simulate
    border-radius: 5px
    background-color: rgba(020,020,20,.3)
.simulate
  top 0!important
@media only screen and (min-device-width : 320px) and (max-device-width:740px)
  .title
    margin-bottom -2.5em
  #info
    height 130vh
    @media (orientation: landscape)
      height 200vw
      .title
        margin-bottom -10%
