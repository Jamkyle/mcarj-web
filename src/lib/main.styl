//parallax
.parallaxParent
  height 110vh
  overflow hidden
  text-align center
  & > div#slider
    position relative
    height 150%
    top -50%
.bg
  &_head
     width 100%
     height 100%

.img
  z-index 1

.bg, .img
  pos absolute 0 0 0 0

.bg
  opacity 0.7
  z-index 2
  background 0px 0px no-repeat linear-gradient(45deg, hsla(208, 100%, 19%, 1) 0%, hsla(208, 100%, 19%, 0) 70%),linear-gradient(135deg, hsla(0, 0%, 0%, 1) 10%, hsla(0, 0%, 0%, 0) 80%),linear-gradient(225deg, hsla(201, 100%, 16%, 1) 10%, hsla(201, 100%, 16%, 0) 80%),linear-gradient(315deg, hsla(0, 0%, 29%, 1) 100%, hsla(0, 0%, 29%, 0) 70%);

.slider
  width 100%
  height 100%
  &-1
    .img
      background url($img1) no-repeat 30% 20%
      background-size cover
  &-2
    .img
      background url($img2) no-repeat 20% 50%
      background-size cover

#simulate
  padding-bottom 10%
  &:before
    z-index: 0;
    position: absolute;
    top 0
    left 0%
    width 100%
    height 110vh
    content: "";
    box-shadow: 0 4px 10px #777;
  &:after
    content: ''
    margin-bottom 10%
.header
  opacity 0.5
  & .img
    width 100%
    opacity 0.5
  &_way
    border-radius 5px 5px 0 0
    text-align right
    padding-right 10px
    color #FEFEFE
    background-color rgba(020,20,20,0.8)



.inner
  top 40%
  color #fff
  &-shadow
    border-radius: 5px
    background-color: rgba(200,200,200,.5)



.simulate
